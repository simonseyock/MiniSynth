{
  "name": "MobileSynthMiniSeq",
  "version": "0.0.1",
  "description": "A small sequencer and synthesizer for a mobile.",
  "author": {
    "name": "Simon Seyock",
    "email": "simonseyock@gmail.com"
  },
  "private": true,
  "dependencies": {
    "jquery": "1.11.1",
    "lodash": "3.2.0"
  },
  "devDependencies": {
    "less": "latest",
    "live-reload": "latest",
    "parallelshell": "latest",
    "uprocess": "latest",
    "watch": "latest",
	  "jsdoc": "latest"
  },
  "scripts": {
    "build:js": "uprocess \"javascript/main.js\" -o \"build/lib/MobileSynthMiniSeq.js\"",
    "watch:js": "watch \"npm run build:js\" javascript/",
    "build:css": "lessc less/main.less build/css/MobileSynthMiniSeq.css",
    "watch:css": "watch \"npm run build:css\" less/",
    "build": "npm run build:js && npm run build:css",
    "watch": "parallelshell \"npm run watch:js\" \"npm run watch:css\"",
    "livereload": "live-reload --port 9091 build/",
    "develop": "parallelshell \"npm run watch\" \"npm run livereload\"",
	  "jsdoc": "jsdoc javascript -r -d doc/jsdoc",
    "test": "echo $PATH",
    "test2": "node -e 'console.log(2)'"
  }
}
